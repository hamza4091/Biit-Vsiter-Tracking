            float: left;

        }

        .container1 {
            width: 100%;
            display: flex;
            padding-left: 10px;
        }

        @* .col-25 {
            float: left;
            width: 70%;
            margin-top: 1px;
        }
*@


        /* Clear floats after the columns */

    </style>

    <div class="container1">


        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Capture Photo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <video id="video" width="400" height="400" autoplay></video>
                        @* <canvas id="canvas" width="400" height="400"></canvas>*@
                        <button type="button" class="btn btn-primary" id="click-photo" data-dismiss="modal">Click Photo</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="row" style="width:60% !important">
            <div class="col">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label>Phone No:</label>
                    <input type="text" class="form-control" id="phone" placeholder="Enter phone number">
                </div>
                <div class="form-group">
                    <label>CNIC</label>
                    <input type="text" class="form-control" id="cnic" placeholder="Enter cnic">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Destination</label>
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="d_admin" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="d_director" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Deputy Director</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="d_datacell" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Data Cell</a>
                        </li>
                    </ul>
                </div>
                <div class="row">

                    @* <button id="start-camera" type="button" class="btn btn-primary">Start Camera</button>*@

                    <div class="col">
                        <button id="start-camera" type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
                            Open Camera
                        </button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary" style="width:400px !important" onclick="submit()">Submit</button>
                    </div>


                </div>
            </div>
        </div>
        <div style="width:10px"></div>
        <div style="width:40%">
            <canvas id="canvas" width="400" height="450"></canvas>
        </div>
    </div>

</body>
</html>
<script>
    let image_data_url = ""
    function load() {
        debugger;

    }
    async function submit() {
        debugger
        var phone = document.getElementById("phone").value
        var name = document.getElementById("name").value
        var cnic = document.getElementById("cnic").value
        var destination = document.getElementById("d_admin").ariaSelected ? "Admin" : document.getElementById("d_director").ariaSelected ? "Director" : "Data Cell"
        const response = await fetch("http://127.0.0.1:1234/insert", {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },

            body: JSON.stringify({
                cnic: cnic,
                destination: destination,
                name: name,
                phone: phone,
                date: new Date(),
                time: new Date().toLocaleTimeString(),
                image: image_data_url

            })
        });

        response.json().then(data => {
            console.log(data);
            alert(JSON.stringify(data))
        });

    }
    let camera_button = document.querySelector("#start-camera");
    let video = document.querySelector("#video");
    let click_button = document.querySelector("#click-photo");
    let canvas = document.querySelector("#canvas");

    camera_button.addEventListener('click', async function () {
        debugger;
        let stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: false });
        video.srcObject = stream;
    });

    click_button.addEventListener('click', function () {
        canvas.getContext('2d').drawImage(video, 0, 0, canvas.width, canvas.height);
        image_data_url = canvas.toDataURL('image/jpeg');
        //  await navigator.mediaDevices.getUserMedia({ video: false, audio: false });
        video.srcObject = null;
        console.log("Vid off");
        // data url of the image
        console.log(image_data_url);
    });
</script>

































